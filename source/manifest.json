{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "default_locale": "en",

  "manifest_version": 2,
  "version": "0.0.1",

  "icons": {
    "16": "icons/32.png",
    "48": "icons/96.png",
    "128": "icons/128.png"
  },

  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icons/38.png",
    "default_title": "Notes"
  },

  "background": {
    "scripts": ["scripts/background.js"]
  },

  "permissions": [
    "tabs",
    "storage",
    "clipboardWrite"
  ],

  "omnibox": {
    "keyword": "__MSG_omniboxKeyword__"
  }
}
